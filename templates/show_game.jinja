{% extends 'base.jinja' %}{% block content %}
    <h1>{{game.title}}</h1>
    <h2>{{game.genre}}</h2>
    <p>{{game.description}}</p>
    {% if game_user == None %}
    <form action="/games/{{game.id}}/check_out" method="post">
        <select name="user" id="user">
            {% for user in users %}
                <option value="{{user.id}}" required>{{user.first_name}} {{user.last_name}}</option>
            {% endfor %}
        </select>
        <button type="submit">Check Out</button>
    </form>
    {% else %}
    <p>Checked out by {{game_user.first_name}} {{game_user.last_name}}</p>
    {% endif %}
    <a href="/games/{{game.id}}/edit">edit</a>
{%endblock%}